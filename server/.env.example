# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret Key (generate a secure random key)
SECRET_KEY=your_jwt_secret_key_here

# Email Configuration (for user registration and password reset)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@accessibilityanalyzer.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5175

# Database Configuration (if using a real database in production)
# DATABASE_URL=postgresql://user:password@localhost/dbname
